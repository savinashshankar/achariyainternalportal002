# ============================================
# CONTENT AUGMENTATION SERVICE - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/content_augmentation
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================
# GOOGLE CLOUD
# ============================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id

# ============================================
# GEMINI AI
# ============================================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp

# ============================================
# HEYGEN (Avatar Videos)
# ============================================
HEYGEN_API_KEY=your-heygen-api-key
HEYGEN_API_URL=https://api.heygen.com/v2
HEYGEN_DEFAULT_AVATAR_ID=your-avatar-id
HEYGEN_DEFAULT_VOICE_ID=your-voice-id

# ============================================
# CANVA (Infographics) - Optional
# ============================================
CANVA_API_KEY=your-canva-api-key
CANVA_TEMPLATE_ID=your-template-id

# ============================================
# PICTORY (Explainer Videos) - Optional
# ============================================
PICTORY_API_KEY=your-pictory-api-key

# ============================================
# VIDEOSCRIBE (Whiteboard) - Optional
# ============================================
VIDEOSCRIBE_API_KEY=your-videoscribe-api-key

# ============================================
# LMS INTEGRATION
# ============================================
LMS_API_URL=http://localhost:8000/api
LMS_SERVICE_API_KEY=your-service-api-key

# ============================================
# REDIS (Task Queue)
# ============================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================
# CONTENT GENERATION SETTINGS
# ============================================
FIDELITY_THRESHOLD_AUTO_APPROVE=0.90
FIDELITY_THRESHOLD_REVIEW=0.70
FIDELITY_THRESHOLD_REJECT=0.60

# Auto-publish high-fidelity content without manual review
AUTO_PUBLISH_ENABLED=true

# ============================================
# NOTIFICATIONS
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_FROM_EMAIL=noreply@achariya.com

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
ENVIRONMENT=production
